<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product List</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-8">
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold mb-4">Product List</h1>
    <a href="/add" class="bg-blue-500 text-white px-4 py-2 rounded">Add Product</a>
    <ul class="mt-4">
      <% products.forEach(product => { %>
        <li class="flex justify-between p-4 border-b">
          <span><%= product.name %> - $<%= product.price %></span>
          <div>
            <a href="/edit/<%= product.id %>" class="text-blue-600">Edit</a>
            <form action="/delete/<%= product.id %>" method="POST" class="inline">
              <button class="text-red-600 ml-2">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
